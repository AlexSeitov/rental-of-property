{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "airbnb-base/legacy",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": ["src/scripts/vendor/*.js", "dist"],
  "rules": {
    "linebreak-style": "off",
    "no-console": "warn",
    "no-var": "error",
    "indent": ["error", 2],
    "no-unused-vars": "warn",
    "func-names": "off",
    "no-tabs": ["error", { "allowIndentationTabs": true }],
    "comma-dangle": ["error", "never"],
    "array-bracket-spacing": ["error", "never"],
    "eqeqeq": "off"
  }
}
